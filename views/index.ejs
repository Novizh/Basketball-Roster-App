<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (players.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Nama Depan</th>
                        <th scope="col">Nama Belakang</th>
                        <th scope="col">Usia</th>
                        <th scope="col">Tinggi Badan</th>
                        <th scope="col">Berat Badan</th>
                        <th scope="col">Posisi</th>
                        <th scope="col">Nomor Punggung</th>
                        <th scope="col">Username</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% players.forEach((player, index) => { %>
                        <tr>
                            <th scope="row"><%= player.id %></th>
                            <td><img src="/assets/img/<%= player.image %>" class="rounded-circle player-img" alt=""></td>
                            <td><%= player.first_name %></td>
                            <td><%= player.last_name %></td>
                            <td><%= player.age %></td>
                            <td><%= player.height %> cm</td>
                            <td><%= player.weight %> kg</td>
                            <td><%= player.position %></td>
                            <td><%= player.number %></td>
                            <td>@<%= player.user_name %></td>
                            <td>
                                <a href="/edit/<%= player.id %>" class="btn btn-sm btn-success">Ubah</a>
                                <a href="/delete/<%= player.id %>" class="btn btn-sm btn-danger">Hapus</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">Tidak ada pemain yang ditemukan. Tekan <a href="/add" >di sini</a> untuk menambah pemain.</p>
        <% } %>
    </div>
</div>
</body>
</html>